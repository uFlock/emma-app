{
	"name": "emma-app",
	"version": "1.0.0",
	"description": "Technical Task for Emma App",
	"main": "index.js",
	"scripts": {
		"start-dev": "nodemon --watch *.ts --exec ts-node src/index.ts",
		"start": "npm run build && node build/index",
		"nodemon": "nodemon",
		"build": "shx rm -rf ./build && tsc -p tsconfig.build.json",
		"test": "jest --watchAll --no-cache",
		"test:ci": "jest --detectOpenHandles --forceExit",
		"check-types": "tsc -p tsconfig.json --noEmit"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/uFlock/emma-app.git"
	},
	"keywords": [
		"emma-app",
		"emma",
		"technical-task",
		"express"
	],
	"author": "Vladimir Muzichuk",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/uFlock/emma-app/issues"
	},
	"homepage": "https://github.com/uFlock/emma-app#readme",
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"./src/test/setup.ts"
		]
	},
	"devDependencies": {
		"@types/jest": "^27.4.0",
		"@types/supertest": "^2.0.11",
		"jest": "^27.4.7",
		"mongodb-memory-server": "^8.2.0",
		"nodemon": "^2.0.15",
		"shx": "^0.3.4",
		"supertest": "^6.2.2",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"@types/body-parser": "^1.19.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"ajv": "^8.9.0",
		"ajv-errors": "^3.0.0",
		"ajv-formats": "^2.1.1",
		"body-parser": "^1.19.1",
		"cors": "^2.8.5",
		"express": "^4.17.2",
		"express-async-errors": "^3.1.1",
		"express-validator": "^6.14.0",
		"faker": "^6.6.6",
		"mongoose": "^6.1.8"
	}
}
